@model _blog_website.Models.Post

@{
    ViewData["Title"] = "Yazı Güncelle";
}

<h2>Yazıyı Güncelle</h2>

<form method="post" asp-controller="Post" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="mb-3">
        <label class="form-label">Başlık</label>
        <input type="text" class="form-control" name="title" value="@Model.Title" required />
    </div>

    <div class="mb-3">
        <label class="form-label">İçerik</label>
        <textarea class="form-control" name="content" rows="6" required>@Model.Content</textarea>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a class="btn btn-secondary ms-2" asp-controller="Post" asp-action="Index">İptal</a>
</form>
