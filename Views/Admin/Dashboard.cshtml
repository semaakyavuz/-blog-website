@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Yönetici Paneli</h2>
    <p class="text-center text-muted">Sadece admin yetkisine sahip kullanıcılar bu sayfayı görebilir.</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-5">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    Kullanıcı Yönetimi
                </div>
                <div class="card-body">
                    <p>Sistemdeki kullanıcıları görüntüleyebilir, düzenleyebilir veya silebilirsiniz.</p>
                    <a href="#" class="btn btn-outline-primary">Kullanıcıları Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    Blog Yönetimi
                </div>
                <div class="card-body">
                    <p>Blog gönderilerini buradan ekleyebilir, düzenleyebilir veya silebilirsiniz.</p>
                    <a href="#" class="btn btn-outline-success">Blogları Yönet</a>
                </div>
            </div>
        </div>
    </div>
</div>
